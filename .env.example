# OpenAI Configuration (Required)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-5-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# Google GenAI Configuration (Required for Advanced OCR)
GOOGLE_GENAI_API_KEY="your_google_genai_api_key_here"
GOOGLE_GENAI_MODEL="gemini-2.0-flash"
GOOGLE_GENAI_MODEL_VISION="gemini-1.5-pro"

# Qdrant Vector Database
QDRANT_HOST="localhost"
QDRANT_PORT="6333" 
QDRANT_COLLECTION_NAME="geotech_knowledge"

# MongoDB Document Database
MONGODB_HOST="localhost"
MONGODB_PORT="27017"
MONGODB_DATABASE="geotech_db"
MONGODB_COLLECTION="documents"

# LangFuse Observability (Optional - Leave empty to disable)
# Sign up at https://cloud.langfuse.com for free account
# Get keys from Settings â†’ API Keys in your LangFuse project
LANGFUSE_PUBLIC_KEY=""  # pk-lf-your_public_key_here (optional)
LANGFUSE_SECRET_KEY=""  # sk-lf-your_secret_key_here (optional)
LANGFUSE_HOST="https://cloud.langfuse.com"

# Application Settings
APP_NAME="Geotech AI Service"
APP_VERSION="1.0.0"
LOG_LEVEL="INFO"
ENVIRONMENT="development"

# API Configuration
API_HOST="0.0.0.0"
API_PORT="8000"

# RAG Configuration  
TOP_K_RETRIEVAL="3"
SIMILARITY_THRESHOLD="0.1"

# LLM Configuration
LLM_TIMEOUT="120"
LLM_MAX_RETRIES="3"
LLM_TEMPERATURE="0.1"
LLM_MAX_COMPLETION_TOKENS="3000"

# Agent Configuration
AGENT_CONFIG_PATH="app/core/config/agents/geotech_agent.yaml"